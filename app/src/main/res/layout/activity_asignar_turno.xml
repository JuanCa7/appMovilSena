<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asignarturno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bordesbtniniciar"
    tools:context=".AsignarTurno">

    <ScrollView
        android:id="@+id/btnAccionTurno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="31dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleAsignarTurno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="ASIGNAR TURNO"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/labelTurno"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_margin="20dp"
                android:text="Turno:"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/txtTurno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="10"
                android:hint="Seleccione un turno..."
                android:inputType="textPersonName"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:text="Aprendiz:"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/txtAprendiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:ems="10"
                android:hint="Seleccione Un aprendiz..."
                android:inputType="textPersonName"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/btnIniciarSesion"
                android:text="crear" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>